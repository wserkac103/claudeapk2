modules = ["python-3.12", "nodejs-20", "web", "java-graalvm22.3"]
[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Run Android App Generator"

[[workflows.workflow]]
name = "Run Android App Generator"
author = 46139905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import sys; sys.path.insert(0, '.'); from app import app; app.run(host='0.0.0.0', port=5001, debug=True)\""

[[workflows.workflow]]
name = "Run Android App Generator"
author = 46139905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start.sh"

[[ports]]
localPort = 5000
externalPort = 80
